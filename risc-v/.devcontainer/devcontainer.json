{
  "name": "RISC-V ISA Practice (Cached)",
  "dockerComposeFile": "docker-compose.yml",
  "service": "risc-v-dev",
  "workspaceFolder": "/workspaces/practice/risc-v",
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true
      },
      "extensions": [
        "ms-vscode.makefile-tools",
        "ms-vscode.cpptools",
        "ms-vscode.hexeditor",
        "ms-python.python",
        "mshr-h.VerilogHDL"
      ]
    }
  },
  "postCreateCommand": "echo 'Cached container ready! Tools available: yosys, nextpnr-ice40, iceprog, riscv64-unknown-elf-gcc'",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false,
      "installOhMyZsh": false,
      "upgradePackages": false
    }
  }
}